node ('arma') {
  stage('Checkout from Git') {
    checkout scm
  }

  stage('Download latest SFP') {
    bat 'gradlew sfp:downloadMod'
  }

  stage('Run autotest') {
    bat 'gradlew sfp:runAutotest'
  }

  stage('Copy Log File') {
    bat 'gradlew sfp:copyLogFile'
  }

  stage('Archive Log File') {
  	archiveArtifacts artifacts: 'sfp/logs/*.rpt'
  }
}
